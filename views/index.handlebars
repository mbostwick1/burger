<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">THE VORTEX</h1>
        <h2 class="lead">ATLANTA'S BEST BURGERS!</h2>
        <h3 class="lead">It's Good to be Bad™</h3>
    </div>
</div>
<div class="container-fluid">
    <div class="col-lg-12">
        <h2>Add a Burger</h2>
        <p>All burgers noted with “LTOP”</p>
        <form class="create-form">
            <div class="form-group">
                <input type="text" id="newBurger" name="burger_name" />
                <button type="submit" id="burgerBtn">Add Burger</button>
            </div>
        </form>
    </div>
    <div class="row">
        <div class="col-md-2" id="sides"></div>
        <div class="col-md-4">
            <ul id="uneaten">
                <h2 class="burger-list-headline"> EAT A BURGER! </h2>
                {{#each burger}}
                {{#unless devoured}}
                {{> burger/burger-block devoured=false}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-4">
                 <ul id="eaten">
                <h2 class="burger-list-headline">THE BURGERS YOU ATE!
                </h2>
                {{#each burger}}
                {{#if devoured}}
                {{!-- > means you're looking in the partials directory --}}
                {{> burger/burger-block devoured=true}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-2" id="sides"></div>
    </div>
</div>